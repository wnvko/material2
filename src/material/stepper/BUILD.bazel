package(default_visibility = ["//visibility:public"])

load("@io_bazel_rules_sass//:defs.bzl", "sass_binary", "sass_library")
load("//src/e2e-app:test_suite.bzl", "e2e_test_suite")
load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_e2e_test_library",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
)

ng_module(
    name = "stepper",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [
        ":stepper.css",
        ":step-header.css",
    ] + glob(["**/*.html"]),
    module_name = "@angular/material/stepper",
    deps = [
        "//src/cdk/a11y",
        "//src/cdk/bidi",
        "//src/cdk/portal",
        "//src/cdk/stepper",
        "//src/material/button",
        "//src/material/core",
        "//src/material/icon",
        "@npm//@angular/animations",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//rxjs",
    ],
)

sass_library(
    name = "stepper_scss_lib",
    srcs = glob(["**/_*.scss"]),
    deps = ["//src/material/core:core_scss_lib"],
)

sass_binary(
    name = "stepper_scss",
    src = "stepper.scss",
    deps = ["//src/material/core:core_scss_lib"],
)

sass_binary(
    name = "step_header_scss",
    src = "step-header.scss",
    deps = ["//src/material/core:core_scss_lib"],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":stepper",
        "//src/cdk/bidi",
        "//src/cdk/keycodes",
        "//src/cdk/stepper",
        "//src/cdk/testing",
        "//src/material/core",
        "//src/material/form-field",
        "//src/material/input",
        "@npm//@angular/forms",
        "@npm//@angular/platform-browser",
        "@npm//rxjs",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

ng_e2e_test_library(
    name = "e2e_test_sources",
    srcs = glob(["**/*.e2e.spec.ts"]),
    deps = [
        "//src/cdk/testing/e2e",
    ],
)

e2e_test_suite(
    name = "e2e_tests",
    deps = [
        ":e2e_test_sources",
        "//src/cdk/testing/e2e",
    ],
)

markdown_to_html(
    name = "overview",
    srcs = [":stepper.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
