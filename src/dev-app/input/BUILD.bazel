package(default_visibility = ["//visibility:public"])

load("//tools:defaults.bzl", "ng_module", "sass_binary")

ng_module(
    name = "input",
    srcs = glob(["**/*.ts"]),
    assets = [
        "input-demo.html",
        ":input_demo_scss",
    ],
    deps = [
        "//src/material/button",
        "//src/material/button-toggle",
        "//src/material/card",
        "//src/material/checkbox",
        "//src/material/form-field",
        "//src/material/icon",
        "//src/material/input",
        "//src/material/select",
        "//src/material/tabs",
        "//src/material/toolbar",
        "@npm//@angular/forms",
        "@npm//@angular/router",
    ],
)

sass_binary(
    name = "input_demo_scss",
    src = "input-demo.scss",
    deps = [
        "//src/cdk/text-field:text_field_scss_lib",
    ],
)
